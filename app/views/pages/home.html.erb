<div class="banner">
  <div class="container justify-content-between d-flex ">
    <div class='banner-welcome'>
      <h1>Bem-vindos ao <strong>Tem Trailer</strong></h1>
      <p>Venha descobrir os melhores trailers e motorhomes do mercado</p>
      <p>O Marketplace dos Trailers e Motorhomes</p>
      <%= link_to "View all Trailers", trailers_path, class:"btn btn-flat"%>
    </div>
    <div class="card-form p-4 card-border">
      <h1 class="mb-3">Encontre seu trailer:</h1>

      <%= simple_form_for :search, url: trailers_path, method: :get do |f| %>
        <%= f.input :query, label: false, input_html: { placeholder: "Find your trailer", value: nil }%>
        <%= f.input :capacity, as: :select, collection: 1..8 %>
        <%= f.date_field :start_date, min: Date.today, class:"my-3" %>
        <%= f.date_field :end_date, class:"my-3" %>
        <%= f.submit "Search", class:"btn btn-primary" %>
      <% end %>
<%
=begin%>
      <%= form_tag trailers_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control my-2",
          placeholder: "Find your trailer"
        %>
        <%= select_tag :capacity, options_for_select((1..8)),
          class: "form-control my-2",
          placeholder: "Numero de pessoas"
        %>
        <div class="d-flex flex-column my-2">
          <div>
            select_date(date = Date.current, options = {}, html_options = {})
            <p id="date">Start Date</p> <%= date_select("reservation", "start_date") %>
          </div>
          <div>
           <p id="date" class="mt-1">End Date</p> <%= date_select("reservation", "end_date")%>
          </div>
        </div>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
<%
=end%>
    </div>
  </div>

</div>

