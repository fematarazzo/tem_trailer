<% content_for :meta_title, "#{@trailer.model} is on #{DEFAULT_META["meta_product_name"]}" %>
<% content_for :meta_description, @trailer.description %>

<div class="container mt-4">

  <h1>Detalhes deste trailer</h1>

  <div class="card">
    <%= cl_image_tag @trailer.photo.key, crop: :pad %>
    <div class="d-flex justify-content-between p-5">
      <div class="card-model p-3 card-border card-width">
        <h1> <%= @trailer.model %> </h1>
        <h4> Description:</h4>
        <h4> <%= @trailer.description %> </h4>
        <hr>
        <div class="d-flex justify-content-left">
          <p> Localidade:</p>
          <p class="ml-2"> <%= @trailer.address %> </p>
        </div>
        <div class="d-flex justify-content-left">
          <p> Onboard Capacity:</p>
          <p class="ml-2"> <%= "#{@trailer.onboard_capacity}" %> </p>
        </div>
      </div>
      <div class="card-model p-3 card-border">
        <h1>Fa√ßa sua reserva:</h1>
        <%= simple_form_for [ @trailer, @reservation ] do |f| %>
          <%= f.date_field :start_date, min: Date.today, class:"my-5" %>
          <%= f.date_field :end_date, class:"my-5" %>
          <%= f.button :submit, class:"btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
